<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_normal">

    <LinearLayout
        android:id="@+id/fragment_repo_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_repo_details_avatar"
            android:layout_width="@dimen/fragment_repo_details_avatar_size"
            android:layout_height="@dimen/fragment_repo_details_avatar_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_normal"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/fragment_repo_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorPrimary"
            tools:text="Android repo" />

        <TextView
            android:id="@+id/fragment_repo_details_descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:maxLines="10"
            tools:text="Description" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_repo_details_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:drawableStart="@drawable/ic_watch"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="200" />

            <TextView
                android:id="@+id/fragment_repo_details_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:drawableStart="@drawable/ic_star"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="150" />

            <TextView
                android:id="@+id/fragment_repo_details_fork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:drawableStart="@drawable/ic_split"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="50" />

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_repo_details_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/margin_normal"
            android:text="@string/fragment_repo_details_see_more"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</ScrollView>